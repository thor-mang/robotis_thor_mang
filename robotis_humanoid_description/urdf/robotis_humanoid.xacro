<?xml version="1.0"?>
<!-- Revolute-Revolute Manipulator -->
<robot name="robotis_humanoid" xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <!-- some parameters -->
  <xacro:property name="pi" value="3.141592654" />

  <!-- Import all Gazebo-customization elements, including Gazebo colors -->
  <xacro:include filename="$(find robotis_humanoid_description)/urdf/robotis_humanoid.gazebo" />
  <!-- Import Rviz colors -->
  <xacro:include filename="$(find robotis_humanoid_description)/urdf/materials.xacro" />

  <xacro:include filename="$(find robotis_humanoid_description)/urdf/robotis_humanoid.structure.arm.xacro" />
  <xacro:include filename="$(find robotis_humanoid_description)/urdf/robotis_humanoid.structure.leg.xacro" />
  <xacro:include filename="$(find robotis_humanoid_description)/urdf/robotis_humanoid.structure.head.xacro" />
  
  <xacro:include filename="$(find robotis_humanoid_description)/urdf/robotis_humanoid.inertia.xacro" />
  <xacro:include filename="$(find robotis_humanoid_description)/urdf/robotis_humanoid.transmissions.xacro" />


  <!-- Used for fixing robot to Gazebo 'link 1' -->

  <link name="world">
  </link>

  <joint name="world_fixed" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <parent link="world"/>
    <child link="base"/>
  </joint>

  <link name="base">
  </link>

  <joint name="base_fixed" type="fixed">
    <origin xyz="0 0 0.801" rpy="0 0 0"/>
    <parent link="base"/>
    <child link="pelvis_link"/>
  </joint>


  <!-- pelvis_link -->
  <link name="pelvis_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01" />
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_humanoid_description/meshes/robotis_pelvis_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>

    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" /> 
    </inertial>
  </link>

  <!-- torso yaw joint -->
  <joint name="torso_y" type="revolute">
    <parent link="pelvis_link"/>
    <child link="chest_link"/>
    <origin xyz="0 0 0.1705" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit velocity="6.5" effort="1000" lower="${-pi*0.6}" upper="${pi*0.6}" />
    <dynamics damping="0.1" friction="0.0" />
  </joint>
  <xacro:insert_transmission name="torso_y" />
  
  <!-- chest_link -->
  <link name="chest_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01" />
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://robotis_humanoid_description/meshes/robotis_chest_link.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="grey"/>
    </visual>

    <inertial>
      <origin xyz="0.0 0.0 0.0" rpy="0 0 0"/>
      <mass value="1.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0" /> 
    </inertial>
  </link>

  
  <xacro:robotis_humanoid_l_arm parent="chest_link" />
  <xacro:robotis_humanoid_r_arm parent="chest_link" />

  <xacro:robotis_humanoid_l_leg parent="pelvis_link" />
  <xacro:robotis_humanoid_r_leg parent="pelvis_link" />

  <xacro:robotis_humanoid_head parent="chest_link" />

</robot>
